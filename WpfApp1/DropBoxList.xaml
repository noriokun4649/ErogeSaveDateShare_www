<Window x:Class="WpfApp1.DropBoxList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DropBox上に保存されているセーブデータ" Height="300" Width="546.281" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="519*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="233*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Button Content="閉じる" Margin="434,6,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="0.889,0.378" Grid.Row="1" Height="20" HorizontalContentAlignment="Center" HorizontalAlignment="Left"/>
        <ListView x:Name="listview" Margin="20,10,0,10" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="タイプ" DisplayMemberBinding="{Binding [0]}"/>
                    <GridViewColumn Header="ファイル・フォルダ名前" DisplayMemberBinding="{Binding [1]}" />
                    <GridViewColumn Header="最終更新日" DisplayMemberBinding="{Binding [2]}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
