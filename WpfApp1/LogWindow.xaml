<Window x:Class="WpfApp1.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LogWindow" Height="527.337" Width="470.242" Closing="Window_Closing" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="457*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="log_box" Margin="15,10,10,10" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="3"/>
        <Button x:Name="close_button" Content="完了" Margin="372,10,10,0" Grid.Row="4" VerticalAlignment="Top" Height="22" Click="close_button_Click"/>
        <TextBlock x:Name="titletext" HorizontalAlignment="Left" Margin="15,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="45" Width="432" FontSize="36"/>
        <ListView x:Name="game_list" Margin="15,12,10,15" Grid.Row="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" SelectionChanged="game_list_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ゲームタイトル" DisplayMemberBinding="{Binding [0]}"/>
                    <GridViewColumn Header="セーブデータ場所" DisplayMemberBinding="{Binding [1]}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="一括実行" HorizontalAlignment="Left" Margin="167,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Height="23" Click="Button_Click_1"/>
        <Button x:Name="selct_button" Content="選択中のゲームタイトルのみ実行" HorizontalAlignment="Left" Margin="247,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="185" Height="23" Click="Button_Click" IsEnabled="False"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,32,0,0" Grid.Row="2" Grid.RowSpan="2" TextWrapping="Wrap" Text="logs......" VerticalAlignment="Top" Height="16" Width="38"/>
        <Button Content="DropBox上のセーブデータ" HorizontalAlignment="Left" Margin="293,24,0,0" VerticalAlignment="Top" Width="139" Click="Button_Click_2" Height="20"/>
        <TextBlock x:Name="type_text" HorizontalAlignment="Left" Margin="15,4,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="147" TextAlignment="Right"/>
    </Grid>
</Window>
